<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>Novo usuário</h2>
    </div>
    <div class="col-md-4 col-md-offset-4">

      <% if @user.errors.any? %>
        <% for message in @user.errors.full_messages %>
          <%= content_tag :div, message, class: "alert alert-warning" %>
        <% end %>
      <% end %>

      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Digite suas informações</h3>
        </div>
        <div class="panel-body">


          <%= form_for @user do |f| %>

          <div class="form-group">
            <%= f.text_field :email, class: "form-control", placeholder: "email" %>
          </div>

          <%= content_tag :div, class: "form-group" do %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          <% end %>

          <%= content_tag :div, class: "form-group" do %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
          <% end %>


          <p class="button"> <%= submit_tag "Login", class: "btn btn-lg btn-success btn-block" %> </p>

          <% end %>

        </div>
        <div class="panel-footer">
          já é cadastro? <%= link_to "faça o login", log_in_path %>
        </div>
      </div>
