<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>Banco de questões</h2>
    </div>
    <div class="col-md-4 col-md-offset-4">

      <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-warning" %>
      <% end %>

      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Digite suas informações</h3>
        </div>
        <div class="panel-body">


          <%= form_tag sessions_path do %>

          <div class="form-group">
            <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= password_field_tag :password, "",class: "form-control", placeholder: "Password" %>
          </div>


          <p class="button"> <%= submit_tag "Login", class: "btn btn-lg btn-success btn-block" %> </p>

          <% end %>

        </div>
        <div class="panel-footer">
          Novo usuário? <%= link_to "Cadastre uma nova conta", sign_up_path %>
        </div>
      </div>
    </div>
  </div>
</div>
